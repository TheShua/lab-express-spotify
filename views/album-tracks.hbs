<article>
    {{#each album}}
    <div>
        {{this.name}} :
        {{#if this.preview_url}}<audio controls src="{{this.preview_url}}">Your browser does not support the
            <code>audio</code> element.</audio>
        {{else}}
        <span>No preview :'(</span>
        {{/if}}
    </div>
    {{/each}}
</article>